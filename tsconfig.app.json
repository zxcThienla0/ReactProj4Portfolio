{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,

    "jsx": "react-jsx",

    "allowJs": true,
    "checkJs": false,

    "noEmit": true,
    "types": []
  },
  "include": ["src"]
}